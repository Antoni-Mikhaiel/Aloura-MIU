<!-- Styling related to cart -->
<link rel="stylesheet" href="/css/cart.css">
<!-- For the 3 icons in the cart -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
 
<!-- Shopping cart menu related -->
<div
  class="offcanvas offcanvas-end custom-offcanvas"
  tabindex="-1"
  id="offcanvasRight"
  aria-labelledby="offcanvasRightLabel"
  style="z-index: 999999999"
>
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvasRightLabel">
      <i class="bi bi-bag"></i>
      Your Cart
    </h5>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="offcanvas"
      aria-label="Close"
    ></button>
  </div>
  <div class="offcanvas-body">
    <div class="row cart-item mb-3">
      <div class="col-md-3">
        <img
          src="../img/perfumes-transparent/spicebomb-extreme.png"
          alt="Spicebomb Extreme"
          class="img-fluid rounded"
        />
      </div>
      <div class="col-md-5">
        <h5 class="card-title">Product 1</h5>
        <p class="text-muted">Color: Black | Size: M</p>
      </div>
      <div class="col-md-2">
        <div class="input-group">
          <button class="btn btn-outline-secondary btn-sm" type="button">
            -
          </button>
          <input
            style="max-width: 100px"
            type="text"
            class="form-control form-control-sm text-center quantity-input"
            value="1"
          />
          <button class="btn btn-outline-secondary btn-sm" type="button">
            +
          </button>
        </div>
      </div>
      <div class="col-md-2 text-end">
        <p class="fw-bold">$99.99</p>
        <button class="btn btn-sm btn-outline-danger trash-can-button">
          <i class="fa-solid fa-trash-can"></i>
        </button>
      </div>
    </div>
    <div class="row cart-item mb-3">
      <div class="col-md-3">
        <img
          src="../img/perfumes-transparent/stronger-with-you.png"
          alt="Spicebomb Extreme"
          class="img-fluid rounded"
        />
      </div>
      <div class="col-md-5">
        <h5 class="card-title">Product 2</h5>
        <p class="text-muted">Color: Black | Size: M</p>
      </div>
      <div class="col-md-2">
        <div class="input-group">
          <button class="btn btn-outline-secondary btn-sm" type="button">
            -
          </button>
          <input
            style="max-width: 100px"
            type="text"
            class="form-control form-control-sm text-center quantity-input"
            value="1"
          />
          <button class="btn btn-outline-secondary btn-sm" type="button">
            +
          </button>
        </div>
      </div>
      <div class="col-md-2 text-end">
        <p class="fw-bold">$99.99</p>
        <button class="btn btn-sm btn-outline-danger trash-can-button">
          <i class="fa-solid fa-trash-can"></i>
        </button>
      </div>
    </div>
    <div class="offcanvas-footer p-3">
      <!-- Payment and Info Section (now at the bottom) -->
      <div class="cart-info-section mb-3">
        <div class="cart-info-subtotal">Sub-Total: <span style="font-weight: 600;">810 â‚¬</span></div>
        <hr class="cart-info-section-hr" id="cart-info-section-hr-first" />
        <ul class="cart-info-list">
          <li>
            <span class="cart-info-icon"><i class="bi bi-truck"></i></span>
            Complimentary delivery with any orders
          </li>
          <li>
            <span class="cart-info-icon"><i class="bi bi-shield-lock"></i></span>
            Secure payment by credit and debit card
          </li>
          <li>
            <span class="cart-info-icon"><i class="bi bi-headset"></i></span>
            Contact our customer service for any inquiries
          </li>
        </ul>
        <hr class="cart-info-section-hr" />
      </div>
      <!-- End Payment and Info Section -->
      <button
        id="last-checkout-button"
        class="btn btn-success w-10"
        onclick="window.location.href='checkout'"
      >
        Check Out
      </button>
      <button
        id="continue-shopping-button"
        class="btn w-100"
        data-bs-dismiss="offcanvas"
      >
        Continue Shopping
      </button>
    </div>
  </div>
</div>