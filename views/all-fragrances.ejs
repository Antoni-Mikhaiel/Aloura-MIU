<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- META DATA -->
    <!-- Define type of characters used in our website -->
    <meta charset="UTF-8" />
    <!-- Keywords for search engine: will be useful when publishing -->
    <meta name="keywords" content="Perfumes, Fragrances" />
    <!--  Different devices with different resolutions-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Description displayed in search engine -->
    <meta
      name="description"
      content="Discover suitable high-quality fragrances at catchy prices. Your perfect fragrance journey starts here."
    />
    <title>Fragrances - Aloura</title>
    <!-- END OF META DATA -->

    <!-- Tab Logo / 'Favicon' -->
    <link
      rel="icon"
      type="image/x-icon"
      href="../img/favicons/rounded-background-favicon.ico"
    />

    <!-- CSS Links (Connecting the CSS file to this file) -->
    <link rel="stylesheet" href="../css/all-fragrances.css" />
    <link rel="stylesheet" href="../css/cssanimation.css" />
    <!-- Scrolly's animations-related -->

    <!-- Font Awesome (navbar, footer, modal, chatbot, cart all use it's icons SO MAKE SURE TO LINK IT) -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <!-- Bootstrap CSS & JS(navbar, footer, modal, cart all use it's functionality SO MAKE SURE TO LINK IT) -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="../js/back-to-top.js"></script>
    <!-- Back to top button related -->

    <!-- Intial Scroll When Reloading-->
    <script>
      // Prevent the browser from restoring the scroll position
      if (history.scrollRestoration) {
        history.scrollRestoration = "manual";
      }
      // Scroll to the top of the page on load
      window.onload = function () {
        window.scrollTo(0, 0);
      };
    </script>
  </head>

  <body>
    <!-- Loader -->
    <%- include('partials/loader.ejs') %>

    <!-- Navbar -->
    <%- include('partials/navbar.ejs') %>

    <!-- Modal -->
    <%- include('partials/modal.ejs') %>

    <!-- Cart -->
    <%- include('partials/cart.ejs') %>

    <!-- Chatbot -->
    <%- include('partials/chatbot.ejs') %>

    <!-- Dark Mode -->
    <%- include('partials/dark-mode.ejs') %>

    <!-- Beggining Title -->
    <h1
      id="header"
      data-scrolly-top="moveFromTop, duration 1.5s, delay:0.15s"
      data-scrolly-down="moveFromBottom, duration 1.5s, delay:0.15s"
    >
      All Fragrances
    </h1>

    <!-- Middle Links 'Filtering Navbar' -->
    <div
      class="middle-links"
      data-scrolly-top="moveFromTop, duration 1.5s, delay:0.15s"
      data-scrolly-down="moveFromBottom, duration 1.5s, delay:0.15s"
    >
      <ul>
        <li><a href="/all-fragrances">All Fragrances</a></li>
        <li><a href="/account">For Women</a></li>
        <li><a href="/fragrances-for-men">For Men</a></li>
        <li><a href="/unisex-fragrances">Unisex</a></li>
      </ul>
    </div>



    <% if (fragrance.length > 0) { %>
          <!-- Controls Container: Filter Button + Search Bar -->
    <div
      class="controls-container"
      data-scrolly-top="moveFromTop, duration 1.5s, delay:0.15s"
      data-scrolly-down="moveFromBottom, duration 1.5s, delay:0.15s"
    >
      <!-- Filter Button and Dropdown Menu Container-->
      <div
        class="filter-container"
        data-scrolly-top="moveFromTop, duration 1.5s, delay:0.15s"
        data-scrolly-down="moveFromBottom, duration 1.5s, delay:0.15s"
      >
        <!-- Filter button -->
        <button class="filter-button">Filter ▼</button>

        <!-- Drop Down Menu Of Filter Button -->
        <div class="dropdown-menu-filter">
          <div class="dropdown-option-filter" data-value="None">None</div>
          <div class="dropdown-option-filter" data-value="Eau de Parfum">
            Eau de Parfum
          </div>
          <div class="dropdown-option-filter" data-value="Eau de Toilette">
            Eau de Toilette
          </div>
          <div class="dropdown-option-filter" data-value="Eau de Cologne">
            Eau de Cologne
          </div>
          <div class="dropdown-option-filter" data-value="Parfum">Parfum</div>
        </div>
      </div>
      <!-- END OF Filter Button and Dropdown Menu Container-->

      <!-- Search Bar Container-->
      <div class="search-container">
        <!-- Empty place holder as the search container's label will do the job with animation! -->
        <input
          type="text"
          class="search-input"
          id="searchBox"
          placeholder=" "
          required
        />
        <label
          class="search-label"
          for="searchBox"
          data-scrolly-top="fadeIn, duration 1.5s, delay:0.55s"
          data-scrolly-down="fadeIn, duration 1.5s, delay:0.55s"
          >Search</label
        >
        <span class="search-icon"
          ><i class="fa-solid fa-magnifying-glass"></i
        ></span>
        <span class="close-icon" id="clearSearch"
          ><i class="fa-solid fa-xmark"></i
        ></span>
      </div>
      <!-- END OF Search Bar Container-->
    </div>
    <!-- End of controls container -->

    <!-- Back-to-top button related: Animation Handled in the CSS, not Scrolly -->
    <div id="back-to-top-div">
      <!-- # means go back to the top of the page -->
      <button id="back-to-top-button" onclick="window.location.href='#'">
        <i class="fa-solid fa-arrow-up" style="margin-right: 7px"></i> To Top
      </button>
    </div>
    <!-- BIG CARDS CONTAINER -->
    <div class="cards-container">
      <% fragrance.forEach(product => { %>
      <!-- Start of card -->
      <div
        class="card"
        id="spicebomb-extreme"
        data-scrolly-top="moveFromTop, duration:0.5s, delay:0.1s"
        data-scrolly-down="moveFromBottom, duration:1.0s, delay:0.12s"
      >
        <!-- Label -->
        <div class="card-label"><%= product.gender %></div>

        <!-- Image Container -->
        <a
          href="/fragrances-page/<%= product._id %>"
          target="_self"
          class="card-image-container"
        >
          <img
            class="card-image"
            src="<%= product.image[0] %>"
            alt="<%= product.name %> Image"
          />
        </a>

        <!-- Title -->
        <a
          href="/fragrances-page/<%= product._id %>"
          target="_blank"
          class="card-title-link"
        >
          <h2 class="card-title"><%= product.name %></h2>
        </a>

        <!-- Type -->
        <p class="card-type"><%= product.category %></p>

        <!-- Mood (topNotes) -->
        <p class="card-mood"><%= product.topNotes %></p>

        <!-- Price + ml container -->
        <div class="card-price">
          <% if (product.sizeOptions && product.sizeOptions.length > 0) { %>
          <span class="price"><%= product.sizeOptions[0].price %> EGP</span>
          <span class="ml"><%= product.sizeOptions[0].size %>ml ▼</span>
          <% } else { %>
          <span class="price text-danger">N/A</span>
          <span class="ml text-danger">No sizes</span>
          <% } %>

          <!-- Dropdown Menu -->
          <div class="dropdown-menu">
            <% product.sizeOptions.forEach(option => { %>
            <div
              class="dropdown-option"
              data-price="<%= option.price %> EGP"
              data-ml="<%= option.size %>ml"
            >
              <span class="dropdown-price"><%= option.price %> EGP</span>
              <span class="dropdown-ml"><%= option.size %>ml</span>
            </div>
            <% }) %>
          </div>
        </div>

        <hr class="card-separator" />

        <!-- Add to Cart -->
        <button
          class="card-button"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasRight"
          aria-controls="offcanvasRight"
        >
          Add To Cart
        </button>
      </div>
      <!-- End of card -->
      <% }) %>
    </div>
    <!-- END OF BIG CARDS CONTAINER -->

    <% } else { %>
    <div
      class="d-flex justify-content-center align-items-center"
      style="height: 90vh"
    >
      <h1 class="text-muted text-center">No fragrances found.</h1>
    </div>
    <% } %>

    <!-- Footer -->
    <%- include('partials/footer.ejs') %>

    <!-- This page's main js file -->
    <script src="../js/all-fragrances.js"></script>

    <!-- Scrolly activation code for it to work -->
    <script type="text/javascript" src="../js/scrolly.js"></script>
    <script>
      window.onload = function () {
        scrolly();
      };
    </script>

    <!-- END OF BODY SCRIPTS -->
  </body>
</html>
