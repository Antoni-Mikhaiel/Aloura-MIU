<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Fragrance</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #ffffff;
        color: #000000;
      }
      .form-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .form-control,
      .form-select {
        background-color: #ffffff;
        color: #000000;
      }
      .checkbox-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      .checkbox-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        width: 100%;
      }

      /* Styling for the three image upload fields */
      .image-upload-container {
        display: flex;
        gap: 1rem;
        justify-content: space-between; /* Space out the inputs */
        margin-bottom: 1rem; /* Add margin to the bottom */
      }

      .image-upload-container input[type="file"] {
        width: 32%; /* Adjust width to fit across the container */
        height: 150px;
        object-fit: cover; /* Makes sure the image fits in the square */
      }

      .ButtonDicoration {
        color: white !important;
        background-color: #121212 !important;
        border: 1px solid #121212 !important;
      }

      .ButtonDicoration:hover {
        color: #121212 !important;
        background-color: white !important;
      }

      #price100 {
        margin-left: -10px;
      }

      .d-flex {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 0.5rem; /* Adjust the gap between the items */
      }

      .d-flex .d-flex {
        flex: 1 1 30%; /* Make each image upload container take 30% width */
        max-width: 200px;
        min-width: 120px;
      }

      .d-flex .btn {
        width: 150px; /* Adjust width of the upload button */
      }
      @media (max-width: 768px) {
        .d-flex .d-flex {
          flex: 1 1 100%; /* Make each container take full width */
          max-width: 100%; /* Ensure no max width */
        }

        .d-flex {
          justify-content: center; /* Center content horizontally */
        }

        .image-upload-container {
          flex-direction: column;
          gap: 1rem;
        }

        .d-flex .btn {
          width: 100%; /* Make buttons take full width on small screens */
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="form-container">
        <h2 class="mb-4 text-center">Add New Fragrance</h2>
        <form
          action="/api/fragrances"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label">Name</label>
            <input
              type="text"
              name="name"
              placeholder="Fragrance Name"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Brand</label>
            <input
              type="text"
              name="brand"
              placeholder="Fragrance Brand"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Gender</label>
            <select name="gender" class="form-select" required>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
              <option value="Unisex">Unisex</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Category</label>
            <select name="category" class="form-select">
              <option value="Eau de Parfum">Eau de Parfum</option>
              <option value="Eau de Toilette">Eau de Toilette</option>
              <option value="Cologne">Cologne</option>
              <option value="Body Mist">Body Mist</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Top Notes (comma-separated)</label>
            <input type="text" name="topNotes" class="form-control" />
          </div>
          <div class="mb-3">
            <label class="form-label">Middle Notes (comma-separated)</label>
            <input type="text" name="middleNotes" class="form-control" />
          </div>
          <div class="mb-3">
            <label class="form-label">Base Notes (comma-separated)</label>
            <input type="text" name="baseNotes" class="form-control" />
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea
              name="description"
              class="form-control"
              rows="3"
            ></textarea>
          </div>

          <div class="mb-3">
            <label class="form-label">Size Options</label><br />
            <div class="checkbox-container">
              <div class="checkbox-item">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="sizes"
                  value="30"
                  id="size30"
                />
                <label class="form-check-label" for="size30">30ml</label>
                <select name="price30" class="form-select" required>
                  <option value="900">900 EGP</option>
                  <option value="1200">1200 EGP</option>
                </select>
                <input
                  type="number"
                  name="quantity30"
                  class="form-control"
                  min="0"
                  placeholder="Quantity"
                />
              </div>
              <div class="checkbox-item">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="sizes"
                  value="50"
                  id="size50"
                />
                <label class="form-check-label" for="size50">50ml</label>
                <select name="price50" class="form-select" required>
                  <option value="1200">900 EGP</option>
                  <option value="1200">1200 EGP</option>
                  <option value="1500">1500 EGP</option>
                </select>
                <input
                  type="number"
                  name="quantity50"
                  class="form-control"
                  min="0"
                  placeholder="Quantity"
                />
              </div>
              <div class="checkbox-item">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="sizes"
                  value="100"
                  id="size100"
                />
                <label class="form-check-label" for="size100">100ml</label>
                <select
                  name="price100"
                  class="form-select"
                  id="price100"
                  required
                >
                  <option value="1200">900 EGP</option>
                  <option value="1200">1200 EGP</option>
                  <option value="1500">1500 EGP</option>
                </select>
                <input
                  type="number"
                  name="quantity100"
                  class="form-control"
                  min="0"
                  placeholder="Quantity"
                />
              </div>
            </div>
          </div>

          <!-- Image upload section -->
          <div class="mb-3 text-center">
            <div class="d-flex justify-content-between flex-wrap">
              <!-- Image 1 -->
              <div class="d-flex flex-column align-items-center mb-3 mb-md-0">
                <p>Fragrance picture</p>
                <img
                  id="profile-picture-preview-1"
                  src="../../img/perfumes-transparent/sauvauge-dior.png"
                  alt="Fragrance Preview"
                  class="mb-2"
                  style="width: 200px; height: 200px; object-fit: cover; border: 2px solid #ccc;"
                />
                <div class="text-center">
                  <input
                    type="file"
                    class="d-none"
                    id="profile-picture-1"
                    name="profilePicture1"
                    accept="image/*"
                    onchange="previewImage(event, 'profile-picture-preview-1')"
                  />
                  <button
                    type="button"
                    class="btn btn-outline-primary btn-sm mt-2 ButtonDicoration"
                    onclick="document.getElementById('profile-picture-1').click()"
                    style="width: 150px"
                  >
                    Upload Picture 1
                  </button>
                  <button
                    type="button"
                    class="btn btn-outline-danger btn-sm mt-2 ml-2"
                    onclick="removeImage('profile-picture-preview-1', 'profile-picture-1')"
                    style="width: 30px; height: 30px; padding: 0"
                  >
                    X
                  </button>
                </div>
              </div>
          
              <!-- Image 2 -->
              <div class="d-flex flex-column align-items-center mb-3 mb-md-0">
                <p>Background 1</p>
                <img
                  id="profile-picture-preview-2"
                  src="../../img/ALOURA.jpg"
                  alt="background-color 1"
                  class="mb-2"
                  style="width: 200px; height: 200px; object-fit: cover; border: 2px solid #ccc;"
                />
                <div class="text-center">
                  <input
                    type="file"
                    class="d-none"
                    id="profile-picture-2"
                    name="profilePicture2"
                    accept="image/*"
                    onchange="previewImage(event, 'profile-picture-preview-2')"
                  />
                  <button
                    type="button"
                    class="btn btn-outline-primary btn-sm mt-2 ButtonDicoration"
                    onclick="document.getElementById('profile-picture-2').click()"
                    style="width: 150px"
                  >
                    Upload Picture 2
                  </button>
                  <button
                    type="button"
                    class="btn btn-outline-danger btn-sm mt-2 ml-2"
                    onclick="removeImage('profile-picture-preview-2', 'profile-picture-2')"
                    style="width: 30px; height: 30px; padding: 0"
                  >
                    X
                  </button>
                </div>
              </div>
          
              <!-- Image 3 -->
              <div class="d-flex flex-column align-items-center">
                <p>Background 2</p>
                <img
                  id="profile-picture-preview-3"
                  src="../../img/ALOURA.jpg"
                  alt="background-color 2"
                  class="mb-2"
                  style="width: 200px; height: 200px; object-fit: cover; border: 2px solid #ccc;"
                />
                <div class="text-center">
                  <input
                    type="file"
                    class="d-none"
                    id="profile-picture-3"
                    name="profilePicture3"
                    accept="image/*"
                    onchange="previewImage(event, 'profile-picture-preview-3')"
                  />
                  <button
                    type="button"
                    class="btn btn-outline-primary btn-sm mt-2 ButtonDicoration"
                    onclick="document.getElementById('profile-picture-3').click()"
                    style="width: 150px"
                  >
                    Upload Picture 3
                  </button>
                  <button
                    type="button"
                    class="btn btn-outline-danger btn-sm mt-2 ml-2"
                    onclick="removeImage('profile-picture-preview-3', 'profile-picture-3')"
                    style="width: 30px; height: 30px; padding: 0"
                  >
                    X
                  </button>
                </div>
              </div>
            </div>
          </div>
          

          <script>
            function previewImage(event, previewId) {
              const file = event.target.files[0];
              const reader = new FileReader();

              reader.onload = function () {
                const preview = document.getElementById(previewId);
                preview.src = reader.result;
              };

              if (file) {
                reader.readAsDataURL(file);
              }
            }

            function removeImage(previewId, inputId) {
              const preview = document.getElementById(previewId);
              const input = document.getElementById(inputId);

              preview.src = ""; // Clear the preview image
              input.value = ""; // Reset the file input field
            }
          </script>

          <div class="mb-3">
            <label class="form-label">Release Date</label>
            <input type="date" name="releaseDate" class="form-control" />
          </div>
          <div class="mb-3">
            <label class="form-label">Tags (comma-separated)</label>
            <input type="text" name="tags" class="form-control" />
          </div>
          <button type="submit" class="btn btn-primary ButtonDicoration">
            Add Fragrance
          </button>
        </form>
      </div>
    </div>

