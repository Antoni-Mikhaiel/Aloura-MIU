<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Fragrance</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <style>
      body {
        background-color: #ffffff;
        color: #000000;
      }
      .form-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }
      .form-control,
      .form-select {
        background-color: #ffffff;
        color: #000000;
      }
      .checkbox-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      .checkbox-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        width: 100%;
      }

      /* Styling for the three image upload fields */
      .image-upload-container {
        display: flex;
        gap: 1rem;
        justify-content: space-between; /* Space out the inputs */
        margin-bottom: 1rem; /* Add margin to the bottom */
      }

      .image-upload-container input[type="file"] {
        width: 32%; /* Adjust width to fit across the container */
        height: 150px;
        object-fit: cover; /* Makes sure the image fits in the square */
      }

      .ButtonDicoration {
        color: white !important;
        background-color: #121212 !important;
        border: 1px solid #121212 !important;
      }

      .ButtonDicoration:hover {
        color: #121212 !important;
        background-color: white !important;
      }

      #price100 {
        margin-left: -10px;
      }

      .d-flex {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 0.5rem; /* Adjust the gap between the items */
      }

      .d-flex .d-flex {
        flex: 1 1 30%; /* Make each image upload container take 30% width */
        max-width: 200px;
        min-width: 120px;
      }

      .d-flex .btn {
        width: 150px; /* Adjust width of the upload button */
      }
      @media (max-width: 768px) {
        .d-flex .d-flex {
          flex: 1 1 100%; /* Make each container take full width */
          max-width: 100%; /* Ensure no max width */
        }

        .d-flex {
          justify-content: center; /* Center content horizontally */
        }

        .image-upload-container {
          flex-direction: column;
          gap: 1rem;
        }

        .d-flex .btn {
          width: 100%; /* Make buttons take full width on small screens */
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="form-container">
        <h2 class="mb-4 text-center">Add New Fragrance</h2>
        <form
          action="/api/fragrances"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label">Name</label>
            <input
              type="text"
              name="name"
              placeholder="Fragrance Name"
              class="form-control"
              id="fragranceName"
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Brand</label>
            <input
              type="text"
              name="brand"
              placeholder="Fragrance Brand"
              class="form-control"
              id="fragranceBrand"
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Gender</label>
            <select
              name="gender"
              id="fragranceGender"
              class="form-select"
              required
            >
              <option value="Male">Male</option>
              <option value="Female">Female</option>
              <option value="Unisex">Unisex</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Category</label>
            <select name="category" id="fragranceCategory" class="form-select">
              <option value="Eau de Parfum">Eau de Parfum</option>
              <option value="Eau de Toilette">Eau de Toilette</option>
              <option value="Cologne">Cologne</option>
              <option value="Body Mist">Body Mist</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Top Notes (comma-separated)</label>
            <input
              type="text"
              id="fragranceTopNotes"
              name="topNotes"
              class="form-control"
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Middle Notes (comma-separated)</label>
            <input
              type="text"
              name="middleNotes"
              id="fragranceMidNotes"
              class="form-control"
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Base Notes (comma-separated)</label>
            <input
              type="text"
              name="baseNotes"
              id="fragranceBaseNotes"
              class="form-control"
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea
              name="description"
              class="form-control"
              rows="3"
              id="fragranceDescription"
            ></textarea>
          </div>

          <div class="mb-3">
            <label class="form-label">Size Options</label><br />
            <div class="checkbox-container">
              <div class="checkbox-item">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="sizes"
                  value="30"
                  id="size30"
                />
                <label class="form-check-label" for="size30">30ml</label>
                <select name="price30" class="form-select" required>
                  <option value="900">900 EGP</option>
                  <option value="1200">1200 EGP</option>
                </select>
                <input
                  type="number"
                  name="quantity30"
                  class="form-control"
                  placeholder="Quantity"
                  id="quantity30"
                />
              </div>
              <div class="checkbox-item">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="sizes"
                  value="50"
                  id="size50"
                />
                <label class="form-check-label" for="size50">50ml</label>
                <select name="price50" class="form-select" required>
                  <option value="1200">900 EGP</option>
                  <option value="1200">1200 EGP</option>
                  <option value="1500">1500 EGP</option>
                </select>
                <input
                  type="number"
                  name="quantity50"
                  class="form-control"
                  placeholder="Quantity"
                  id="quantity50"
                />
              </div>
              <div class="checkbox-item">
                <input
                  class="form-check-input"
                  type="checkbox"
                  name="sizes"
                  value="100"
                  id="size100"
                />
                <label class="form-check-label" for="size100">100ml</label>
                <select
                  name="price100"
                  class="form-select"
                  id="price100"
                  required
                >
                  <option value="1200">900 EGP</option>
                  <option value="1200">1200 EGP</option>
                  <option value="1500">1500 EGP</option>
                </select>
                <input
                  type="number"
                  name="quantity100"
                  class="form-control"
                  placeholder="Quantity"
                  id="quantity100"
                />
              </div>
            </div>
          </div>

          <!-- Image upload section -->
          <div class="mb-3 text-center">
            <div class="d-flex justify-content-between flex-wrap">
              <!-- Image 1 -->
              <div class="d-flex flex-column align-items-center mb-3 mb-md-0">
                <p>Fragrance picture</p>
                <img
                  id="fragrancePicture"
                  src="/img/perfumes-transparent/sauvauge-dior.png"
                  alt="Fragrance Preview"
                  class="mb-2"
                  style="
                    width: 200px;
                    height: 200px;
                    object-fit: cover;
                    border: 2px solid #ccc;
                  "
                />
                <div class="text-center">
                  <input
                    type="file"
                    class="d-none"
                    id="fragrancePictureInput"
                    name="images"
                    accept="image/*"
                    onchange="previewImage(event, 'fragrancePicture')"
                  />
                  <button
                    type="button"
                    class="btn btn-outline-primary btn-sm mt-2 ButtonDicoration"
                    onclick="document.getElementById('fragrancePictureInput').click()"
                    style="width: 150px"
                  >
                    Upload Picture 1
                  </button>
                  <button
                    type="button"
                    class="btn btn-outline-danger btn-sm mt-2 ml-2"
                    onclick="removeImage('fragrancePicture', 'fragrancePictureInput')"
                    style="width: 30px; height: 30px; padding: 0"
                  >
                    X
                  </button>
                </div>
              </div>

              <!-- Image 2 -->
              <div class="d-flex flex-column align-items-center mb-3 mb-md-0">
                <p>Background 1</p>
                <img
                  id="backgroundPicture1"
                  src="/img/ALOURA.jpg"
                  alt="background-color 1"
                  class="mb-2"
                  style="
                    width: 200px;
                    height: 200px;
                    object-fit: cover;
                    border: 2px solid #ccc;
                  "
                />
                <div class="text-center">
                  <input
                    type="file"
                    class="d-none"
                    id="backgroundPicture1Input"
                    name="images"
                    accept="image/*"
                    onchange="previewImage(event, 'backgroundPicture1')"
                  />
                  <button
                    type="button"
                    class="btn btn-outline-primary btn-sm mt-2 ButtonDicoration"
                    onclick="document.getElementById('backgroundPicture1Input').click()"
                    style="width: 150px"
                  >
                    Upload Picture 2
                  </button>
                  <button
                    type="button"
                    class="btn btn-outline-danger btn-sm mt-2 ml-2"
                    onclick="removeImage('backgroundPicture1', 'backgroundPicture1Input')"
                    style="width: 30px; height: 30px; padding: 0"
                  >
                    X
                  </button>
                </div>
              </div>

              <!-- Image 3 -->
              <div class="d-flex flex-column align-items-center">
                <p>Background 2</p>
                <img
                  id="backgroundPicture2"
                  src="/img/ALOURA.jpg"
                  alt="background-color 2"
                  class="mb-2"
                  style="
                    width: 200px;
                    height: 200px;
                    object-fit: cover;
                    border: 2px solid #ccc;
                  "
                />
                <div class="text-center">
                  <input
                    type="file"
                    class="d-none"
                    id="backgroundPicture2Input"
                    name="images"
                    accept="image/*"
                    onchange="previewImage(event, 'backgroundPicture2')"
                  />
                  <button
                    type="button"
                    class="btn btn-outline-primary btn-sm mt-2 ButtonDicoration"
                    onclick="document.getElementById('backgroundPicture2Input').click()"
                    style="width: 150px"
                  >
                    Upload Picture 3
                  </button>
                  <button
                    type="button"
                    class="btn btn-outline-danger btn-sm mt-2 ml-2"
                    onclick="removeImage('backgroundPicture2', 'backgroundPicture2Input')"
                    style="width: 30px; height: 30px; padding: 0"
                  >
                    X
                  </button>
                </div>
              </div>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Release Date</label>
            <input
              type="date"
              id="releaseDate"
              name="releaseDate"
              class="form-control"
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Tags (comma-separated)</label>
            <input type="text" id="tags" name="tags" class="form-control" />
          </div>
          <button type="submit" class="btn btn-primary ButtonDicoration">
            Add Fragrance
          </button>
        </form>
      </div>
    </div>

    <script type="module">
      import showFunToast from "/js/toast.js";

      // ✅ Image preview & removal
      function previewImage(event, previewId) {
        const file = event.target.files[0];
        const reader = new FileReader();
        reader.onload = () => {
          const preview = document.getElementById(previewId);
          preview.src = reader.result;
        };
        if (file) reader.readAsDataURL(file);
      }

      function removeImage(previewId, inputId) {
        const preview = document.getElementById(previewId);
        const input = document.getElementById(inputId);
        preview.src = "";
        input.value = "";
      }

      window.previewImage = previewImage;
      window.removeImage = removeImage;

      // ✅ Form logic
      const form = document.querySelector("form");

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);

        // ✅ Get fields
        const name = document.getElementById("fragranceName").value.trim();
        const brand = document.getElementById("fragranceBrand").value.trim();
        const gender = document.getElementById("fragranceGender").value.trim();
        const category = document
          .getElementById("fragranceCategory")
          .value.trim();
        const topNotes = document
          .getElementById("fragranceTopNotes")
          .value.trim();
        const midNotes = document
          .getElementById("fragranceMidNotes")
          .value.trim();
        const baseNotes = document
          .getElementById("fragranceBaseNotes")
          .value.trim();
        const description = document
          .getElementById("fragranceDescription")
          .value.trim();
        const releaseDate = document.getElementById("releaseDate").value.trim();
        const tags = document.getElementById("tags").value.trim();

        // ✅ Validate required text fields
        if (!name)
          return showFunToast("⚠️ Please enter the fragrance name.", "red");
        if (!brand)
          return showFunToast("⚠️ Please enter the fragrance brand.", "red");
        if (!gender) return showFunToast("⚠️ Please select a gender.", "red");
        if (!category)
          return showFunToast("⚠️ Please select a category.", "red");
        if (!topNotes) return showFunToast("⚠️ Please enter top notes.", "red");
        if (!midNotes)
          return showFunToast("⚠️ Please enter middle notes.", "red");
        if (!baseNotes)
          return showFunToast("⚠️ Please enter base notes.", "red");
        if (!description)
          return showFunToast("⚠️ Please enter a description.", "red");

        // ✅ Validate size checkbox
        const checkedSizes = form.querySelectorAll(
          "input[name='sizes']:checked"
        );
        if (checkedSizes.length === 0) {
          return showFunToast(
            "⚠️ Please select at least one size option.",
            "red"
          );
        }

        // ✅ Validate quantity fields for selected sizes
        const missingQuantities = [];
        const invalidQuantities = [];

        for (const checkbox of checkedSizes) {
          const size = checkbox.value; // "30", "50", "100"
          const quantityInput = document.getElementById(`quantity${size}`);

          if (!quantityInput || quantityInput.value.trim() === "") {
            missingQuantities.push(`${size}ml`);
          } else {
            const quantity = parseInt(quantityInput.value.trim(), 10);
            if (isNaN(quantity) || quantity < 0) {
              invalidQuantities.push(`${size}ml`);
            }
          }
        }

        if (missingQuantities.length > 0) {
          return showFunToast(
            `⚠️ Please enter quantity for: ${missingQuantities.join(", ")}`,
            "red"
          );
        }

        if (invalidQuantities.length > 0) {
          return showFunToast(
            `⚠️ Quantity must be a positive number for: ${invalidQuantities.join(
              ", "
            )}`,
            "red"
          );
        }

        // ✅ Validate images
        const imageInputs = [
          "fragrancePictureInput",
          "backgroundPicture1Input",
          "backgroundPicture2Input",
        ];
        for (const inputId of imageInputs) {
          const input = document.getElementById(inputId);
          if (!input.files || input.files.length === 0) {
            return showFunToast("⚠️ Please upload all three images.", "red");
          }
        }

        if (!releaseDate)
          return showFunToast("⚠️ Please enter a release date.", "red");
        if (!tags) return showFunToast("⚠️ Please enter tags.", "red");

        // ✅ Append sizes
        checkedSizes.forEach((checkbox) => {
          formData.append("sizes", checkbox.value);
        });

        // ✅ Submit
        try {
          const response = await fetch("/api/fragrances", {
            method: "POST",
            body: formData,
          });

          const result = await response.json();

          if (response.ok) {
            showFunToast("✅ Fragrance added successfully!", "green");
            form.reset();
            [
              "fragrancePicture",
              "backgroundPicture1",
              "backgroundPicture2",
            ].forEach((id) => {
              const img = document.getElementById(id);
              if (img) img.src = "";
            });
          } else {
            showFunToast(
              `❌ ${result.error || "Something went wrong."}`,
              "red"
            );
          }
        } catch (error) {
          console.error("Fetch error:", error);
          showFunToast(
            "❌ Request failed. Please check your connection.",
            "red"
          );
        }
      });
    </script>
  </body>
</html>
